<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ru.tasu.directleader.ExpandablePanel
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/expandablePanel"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:handle="@+id/handleLayout"
        app:content="@+id/contentLayout"
        app:collapsedHeight="0dip"
        app:animationDur="250">
        <LinearLayout 
            android:id="@id/handleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:clickable="true"
            >
            <TextView 
		        android:id="@+id/detailAuthorTextView"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:gravity="left"
		        android:maxLines="1"
		        android:singleLine="true"
		        android:layout_weight="2"
		        android:text="Григорьев Александр Андреевич"/>
            <TextView 
                android:id="@+id/detailPropertyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="left"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_weight="2"
                android:text="Сводящий: Да, Срок исполнения: 17.08.2015, Поручение: Поручение Григорьева еще"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
        </LinearLayout>
    </ru.tasu.directleader.ExpandablePanel>

</LinearLayout>