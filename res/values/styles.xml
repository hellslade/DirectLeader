<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <style name="Theme.TaskDialog" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="BookCompoundView">
        <attr name="drawableBackground" format="reference" />
        <attr name="drawableForeground" format="reference" />
        
        <attr name="firstBMDrawable" format="reference" />
        <attr name="secondBMDrawable" format="reference" />
        <attr name="thirdBMDrawable" format="reference" />
        
        <attr name="firstBMTextColor" format="reference|color" />
        <attr name="secondBMTextColor" format="reference|color" />
        <attr name="thirdBMTextColor" format="reference|color" />
        
        <attr name="captionDrawable" format="reference"/>
        <attr name="captionText" format="reference|string"/>
        <attr name="captionTextColor" format="reference|color"/>
        <attr name="captionTextSize" format="reference|dimension"/>
    </declare-styleable>
</resources>
